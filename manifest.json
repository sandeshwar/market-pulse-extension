{
    "manifest_version": 3,
    "name": "SENSEX Tracker",
    "version": "1.0",
    "description": "Displays the latest SENSEX value",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*.finance.yahoo.com/*",
        "https://query1.finance.yahoo.com/*",
        "https://query2.finance.yahoo.com/*"
    ],
    "web_accessible_resources": [{
        "resources": [
            "js/config/*",
            "js/utils/*",
            "js/*.js"
        ],
        "matches": ["<all_urls>"]
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.finance.yahoo.com https://query*.finance.yahoo.com"
    }
}